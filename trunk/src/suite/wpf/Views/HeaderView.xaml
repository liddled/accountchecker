<UserControl x:Class="DL.AccountChecker.Suite.WPF.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{DynamicResource HeaderStyle}">
    <StackPanel Orientation="Horizontal">
        <Image Source="..\Content\Images\logo.png" Margin="0,0,5,0" />
        <TextBlock Style="{DynamicResource HeaderTitle}">
            <Span Foreground="{DynamicResource AccountCheckerHeaderColor}">Account</Span><Span>Checker</Span>
        </TextBlock>
    </StackPanel>
</UserControl>
